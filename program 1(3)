#include <iostream>

using namespace std;

    int main() {
    double length, breadth;

    cout << "Enter the length of the rectangle: ";
    cin >> length;


    cout << "Enter the breadth of the rectangle: ";
    cin >> breadth;

    double perimeter = 2 * (length + breadth);
    double area = length * breadth;

    cout << "Perimeter: " << perimeter << endl;
    cout << "Area: " << area << endl;

    return 0;
}
