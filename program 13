#include <iostream>

using namespace std;


int sumOfNaturalNumbers(int n) {
    return (n * (n + 1)) / 2;
}

int main() {
    int n;

    cout << "Enter a positive integer n: ";
    cin >> n;

    if (n <= 0) {
        cout << "Please enter a positive integer." << endl;
        return 1;
    }

    int sum = sumOfNaturalNumbers(n);

    cout << "Sum of first " << n << " natural numbers is: " << sum << endl;

    return 0;
}
